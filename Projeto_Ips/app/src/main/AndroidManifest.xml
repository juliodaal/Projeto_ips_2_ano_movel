<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projeto_ips_otra_interface">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Projeto_Ips">
        <activity android:name=".ProfileActivity"
            android:label="@string/profile"/>
        <activity android:name=".HistoricActivity"
            android:label="@string/historic"/>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.Projeto_Ips.NoActionBar" />
        <activity
            android:name=".SupportLoginActivity"
            android:label="@string/support"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".SupportActivity"
            android:label="@string/support"
            android:parentActivityName=".HistoricActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QrCodeActivity"
            android:label="@string/qrcode" />
        <activity
            android:name=".DashboardActivity"
            android:label="@string/dashboard" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/sign_in"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Projeto_Ipsnobar" />
    </application>

</manifest>